public class backGruoun : MonoBehaviour
{
    public MeshRenderer Renderer;          //메쉬 랜더러
    public Transform CameraTransform;      //카메라 트랜스폼
    public float ScrollSpeed;              //스크롤 속도(맵 이동속도)
    

     private void Update()
    {
        //메터리얼에서 오프셋 값가져오기
        Vector2 offset = Renderer.material.mainTextureOffset;
        
        //카메라의 위치로 오프셋 x값 계산
        offset.x = (1/transform.localScale.x) * CameraTransform.position.x;
        
        //스크롤 속력 적용
        offset.x *= ScrollSpeed;
       
        //계산한 오프셋 값을 메터리얼에 적용
        Renderer.material.mainTextureOffset = offset;

    }
}

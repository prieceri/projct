/// <summary>
/// 일정한 속력으로 위로 자동으로 움직이다가
/// 플레이어 캐릭터와 닿으면 게임 오버
/// </summary>
public class Water : MonoBehaviour
{
    [Header("----- 이동 속력 -----")]
    public float Speed;

    // Update is called once per frame
    void Update()
    {
        //transform.Translate(0, Speed * Time.deltaTime, 0);

        // 방향 벡터 * 크기 방식
        transform.Translate(Vector3.up * Speed * Time.deltaTime);
    }

    private void OnTriggerEnter2D(Collider2D collision)
    {
        // 트리거한 상대 콜라이더 게임오브젝트의 태그가 "CloudWave"이면
        if(collision.gameObject.tag == "CloudWave")
        {
            // 상대 콜라이더 게임오브젝트를 제거
            Destroy(collision.gameObject);
        }
    }
}
/// <summary>
/// 게임오브젝트를 일정한 속력으로 위에서 아래로 이동하는 역할
/// </summary>
public class Arrow : MonoBehaviour
{
    [Header("----- 이동 속력 -----")]
    public float Speed;

    // Update is called once per frame
    void Update()
    {
        //transform.Translate(0, -Speed * Time.deltaTime, 0);

        transform.Translate(Vector3.down * Speed * Time.deltaTime);
    }
}
//게임 오브젝트를 일정한 속력으로 양옆으로 이동하는 역할
public class Arrowmove : MonoBehaviour
{
    [Header("---이동속도 및 거리---")]
    public float speed;   // 이동 속도
    public float distance;  // 좌우 이동 거리

   // private Vector3 startPos;
    private Vector3 localStartPos;

    void Start()
    {
        //startPos = transform.position;
        // 카메라 기준 위치 저장
        localStartPos = transform.localPosition;
    }

    void Update()
    {
        float x = Mathf.Sin(Time.time * speed) * distance;
        transform.localPosition = localStartPos + new Vector3(x, 0f, 0f);
    }
}

